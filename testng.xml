<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="BDD Test Suite" verbose="1" parallel="tests" thread-count="1" configfailurepolicy="continue">

    <test name="ECMS GET" annotations="JDK" preserve-order="true">
        <classes>
            <class name="demotest.RestAPIautomation"/>
        </classes>
    </test>
    <test name="ECMS JSON" annotations="JDK" preserve-order="true">
        <classes>
            <class name="demotest.RestJSONValidation"/>
        </classes>
    </test>

    <test name="ECMS PUT" annotations="JDK" preserve-order="true">
        <classes>
            <class name="demotest.RestPut"/>
        </classes>
    </test>

    <test name="ECMS-RequestChaining" annotations="JDK" preserve-order="true">
        <classes>
            <class name="demotest.RestRequestChainingPost"/>
        </classes>
    </test>

    <test name="ECMS-POST" annotations="JDK" preserve-order="true">
        <classes>
            <class name="demotest.RestPost"/>
        </classes>
    </test>
</suite>